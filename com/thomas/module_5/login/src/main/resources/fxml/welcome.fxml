<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane prefHeight="300.0" prefWidth="600.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.thomas.login.WelcomeController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <StackPane>
        <VBox spacing="10.0">
            <Label text="Click on the &quot;Add User&quot; button to add a new user to the database, &#13;then log out and log back in using the &quot;Logout&quot; button to test their credentials." />
            <GridPane>
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="300.0" minWidth="10.0" prefWidth="109.0" />
                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="300.0" minWidth="10.0" prefWidth="189.0" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                </rowConstraints>
                <Label fx:id="usernameField" text="undefined" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <Label fx:id="sessionIDField" text="undefined" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            </GridPane>
            <StackPane>
                <Button id="addUserButton" alignment="CENTER" mnemonicParsing="false" onAction="#openAddUserPopup" text="Add User" StackPane.alignment="CENTER_LEFT" />
                <Button id="logoutButton" fx:id="logoutButton" alignment="CENTER" mnemonicParsing="false" text="Logout" StackPane.alignment="CENTER_RIGHT" />
            </StackPane>
        </VBox>
    </StackPane>
</StackPane>
